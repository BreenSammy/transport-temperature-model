airOutside_to_airInside
{
type        opaqueReflective;

    // Fraction of the reflected is diffussive
    fd          0.0; // 0: all specular 1: all diffusive

    wallAbsorptionEmissionModel
    {
        type            multiBandAbsorption;
        absorptivity    (0.6 0.6);
        emissivity      (0.6 0.6);
    };
}

